<div class="container">
    <form id="mega-form" class="form-signin" method="post">
        <h2 class="form-signin-heading">Register your MegaSub</h2>
        <label for="twitchName" class="sr-only">Twitch Username</label>
        <input type="text" id="twitchName" class="form-control" placeholder="Twitch Username" required autofocus>
        <label for="steam64" class="sr-only">Steam 64 ID</label>
        <input type="text" id="steam64" class="form-control" placeholder="Steam 64 ID" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
</div>